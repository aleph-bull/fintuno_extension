{
    "manifest_version": 3,
    "name": "Fintuno MVP",
    "version": "0.0.1",
    "description": "Blocks sites until you answer a question.",
    "permissions": [
        "tabs",
        "webNavigation",
        "scripting",
        "activeTab",
        "storage",
        "alarms"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "single.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "index.html",
                "redirect.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}